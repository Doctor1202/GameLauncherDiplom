<Window x:Class="GameStoreDiplomca.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameStoreDiplomca"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="White">
    <Grid>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,10,400,10"/>
        <Button x:Name="Delete_Button" Content="Delete" HorizontalAlignment="Left" Margin="405,398,0,0" VerticalAlignment="Top" Height="26" Width="119"/>
        <Button x:Name="Create_Button" Content="Create" HorizontalAlignment="Left" Margin="405,344,0,0" VerticalAlignment="Top" Height="26" Width="119"/>
        <Button x:Name="Change_Button" Content="Change" HorizontalAlignment="Left" Margin="405,287,0,0" VerticalAlignment="Top" Height="26" Width="119"/>

    </Grid>
</Window>
