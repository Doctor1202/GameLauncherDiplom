        <TextBox x:Name="PublisherName_TextBox" TextWrapping="Wrap" Text="TextBox" Margin="149,139,74,283"/>
        <TextBox x:Name="GenreName_TextBox" TextWrapping="Wrap" Text="TextBox" Margin="149,173,74,249"/>
