<Window x:Class="GameStoreDiplomca.Windows.LibraryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameStoreDiplomca.Windows"
        mc:Ignorable="d"
        Title="LibraryWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="GameList_DataGid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,10,492,10" IsSynchronizedWithCurrentItem="False" >
            <DataGrid.CellStyle>
                <Style/>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="GameName" Binding="{Binding GameName}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
